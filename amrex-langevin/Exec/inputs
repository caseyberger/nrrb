# Physical Input Parameters
nrrb.m = 1.0
nrrb.l = 0.001
nrrb.w = 0.001
nrrb.w_t = 0.001
nrrb.dtau = 0.05
nrrb.mu = -0.1
nrrb.eps = 0.01

# Set a seed for the random number generator
nrrb.seed = -1

# Domain Size and Grid Decomposition
n_cell = 21 21 80
max_grid_size = 32

# Periodicity and Domain Boundary Conditions
#
# For a given dimension, if is_periodic[i] = 1,
# then the lo/hi BC type should be BCType::int_dir.
#
# Here are the supported boundary conditions in BCType:
# BCType::reflect_odd  = -1
# BCType::int_dir      =  0
# BCType::reflect_even =  1
# BCType::foextrap     =  2
# BCType::ext_dir      =  3
# BCType::hoextrap     =  4
is_periodic = 0 0 1 # Periodic in time, non-periodic in space
domain_lo_bc_types = 2 2 0 # 1st order extrapolation in space, interior BCs (periodic) in time
domain_hi_bc_types = 2 2 0 # 1st order extrapolation in space, interior BCs (periodic) in time

# Stopping criteria
nsteps = 10

# I/O
plot_int = 1
